    // Commands ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // These specify the bot commands, and the actions they should trigger.
    "Commands": [
        {
            // The actual chat text, chat users will type !stats to activate this command
            "Cmd": "stats",
            // When chat users type !help, this will be displayed, along with the Cmd above like: !stats - show your hero stats
            "Help": "show your hero stats",
            // HeroCommand is part of the Adopt a Hero module
            "Handler": "HeroCommand",
            "HandlerConfig": {
                // Shows HP, Gold, last seen location
                "ShowGeneral": true,
                // Shows level and all skills above the MinSkillToShow value, along with their focus points
                "ShowTopSkills": true,
                "MinSkillToShow": 50,
                // Shows all attributes
                "ShowAttributes": true
                // Shows all battle and civilian equipment, and horse and bridle (if owned)
                // "ShowEquipment": true
            }
        },
        {
            "Cmd": "inv",
            "Help": "show your hero equipment",
            "Handler": "HeroCommand",
            "HandlerConfig": {
                "ShowEquipment": true
            }
        }
    ],
    // Any Actions, Commands or modules can have shared global configurations, these can be specified here (Adopt a Hero doesn't contain any)
    "GlobalConfigs": [],
    // This specifies the SimTesting behaviour, useful for devs.
    // It works by simulating the actions of viewers, both redeeming Rewards and running Commands randomly.
    "SimTesting": {
        // Max simultaneous simulated users
        "UserCount": 10,
        // How long simulated users stay for in seconds (new ones are generated when old ones leave)
        "UserStayTime": 300,
        // Random interval between each random action
        "IntervalMinMS": 500,
        "IntervalMaxMS": 2500,
        // These will be performed first, in sequence when a new simulated user is created, before they do anything else.
        "Init": [
            {
