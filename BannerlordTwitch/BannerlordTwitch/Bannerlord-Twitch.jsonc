        {
            "RewardSpec": {
                "title": "+1 Movement Focus Point",
                "cost": 5000,
                "is_enabled": true,
                "max_per_user_per_stream": 1
            },
            "ActionId": "FocusPoints",
            "ActionConfig": {
                "Improvement": "Riding, Athletics",
                "AmountLow": 1,
                "AmountHigh": 1
            }
        },
        {
            "RewardSpec": {
                "title": "+1 Personal Focus Point",
                "cost": 5000,
                "is_enabled": true,
                "max_per_user_per_stream": 1
            },
            "ActionId": "FocusPoints",
            "ActionConfig": {
                "Improvement": "Tactics, Roguery, Charm, Leadership",
                "AmountLow": 1,
                "AmountHigh": 1
            }
        },
        // EquipHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        {
            "RewardSpec": {
                "title": "Equip Tier 1",
                "cost": 2000,
                "is_enabled": true,
                "max_per_user_per_stream": 1
            },
            // EquipHero action allows upgrade of the adopted heros equipment. It will select based on highest skill, and only 
            // upgrade things that are below the specified tier
            "ActionId": "EquipHero",
            "ActionConfig": {
                // Tier is from 0 to 5 inclusive
                "Tier": 0,
                // Whether to allow this to upgrade companions (player might want to block this)
                "AllowCompanionUpgrade": true,
                // Upgrade armor?
                "Armor": true,
                // Upgrade melee weapon?
                "Melee": true,
                // Upgrade ranged weapon?
                "Ranged": true,
                // Upgrade horse + bridle?
                "Horse": true,
                // Upgrade civilian clothes + weapon?
                "Civilian": true
