    // Commands ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // These specify the bot commands, and the actions they should trigger.
    "Commands": [
        // HeroInfoCommand ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        {
            // The actual chat text, chat users will type !stats to activate this command
            "Cmd": "stats",
            // When chat users type !help, this will be displayed, along with the Cmd above like: !stats - show your hero stats
            "Help": "Hero stats",
            // HeroCommand is part of the Adopt a Hero module
            "Handler": "HeroInfoCommand",
            "HandlerConfig": {
                // Shows HP, Gold, last seen location
                "ShowGeneral": true,
                // Shows level and all skills above the MinSkillToShow value, along with their focus points
                "ShowTopSkills": true,
                "MinSkillToShow": 50,
                // Shows all attributes
                "ShowAttributes": true
                // Shows all battle and civilian equipment, and horse and bridle (if owned)
                // "ShowEquipment": true
            }
        },
        {
            "Cmd": "inv",
            "Help": "Hero equipment",
            "Handler": "HeroInfoCommand",
            "HandlerConfig": {
                "ShowEquipment": true
            }
        },
        // AdoptAHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        // This is the bot command equivalent of the Adopt a Hero reward, allowing subscribers to run it only
        {
            "Cmd": "adopt",
            "Help": "Adopt a Hero (subs only)",
            "Handler": "AdoptAHero",
            "HandlerConfig": {
                "IsNoble": true,
                // Adopt only nobles
                // "IsPlayerCompanion": true, // Adopt only companions *NOT TESTED YET*
                "IsWanderer": true,
                // Adopt only wanderers
                // "OnlySameFaction": true, // Adopt only within the same faction *NOT TESTED YET*
                "AllowNewAdoptionOnDeath": true,
                // Allows the viewer to adopt again if their previous hero dies
                "SubscriberOnly": true
            }
        },
        // SummonHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        // This allows summoning the hero to the player
        {
            "Cmd": "summon",
            "Help": "Appear near player (5k gold)",
            "Handler": "SummonHero",
            "HandlerConfig": {
                // These flags allow you to limit where the spawning is allowed
                "AllowFieldBattle": true,
                "AllowSiegeBattle": true,
                "AllowVillageBattle": true,
                "AllowArena": true,
                "AllowHideOut": true,
                "AllowFriendlyMission": true,
                "OnPlayerSide": true,
                // only player side is tested so far
                "GoldCost": 5000
            }
        },
        // SkillXP ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        {
            "Cmd": "skill",
            "Help": "+5000xp to Skill (5k gold)",
            "Handler": "SkillXP",
            "HandlerConfig": {
                "Auto": true,
                "AmountLow": 5000,
                "AmountHigh": 5000,
                "GoldCost": 5000
            }
        },
        // AttributePoints ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        {
            "Cmd": "attr",
            "Help": "+1 Attr (10k gold)",
            "Handler": "AttributePoints",
            "HandlerConfig": {
                "Improvement": "Vigor, Control, Endurance, Cunning, Social, Intelligence",
                "Random": true,
                "AmountLow": 1,
                "AmountHigh": 1,
                "GoldCost": 10000
            }
        },
        // FocusPoints ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        {
            "Cmd": "focus",
            "Help": "+1 Focus (10k gold)",
            "Handler": "FocusPoints",
            "HandlerConfig": {
                "Auto": true,
                "AmountLow": 1,
                "AmountHigh": 1,
                "GoldCost": 10000
            }
        },
        // EquipHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        {
            "Cmd": "equip",
            "Help": "Improve Equip (15k gold)",
            "Handler": "EquipHero",
            "HandlerConfig": {
                "AllowCompanionUpgrade": true,
                "Armor": true,
                "Melee": true,
                "Ranged": true,
                "Horse": true,
                "Civilian": true,
                "Upgrade": true, // this means just improve on whatever the hero currently has
                "GoldCost": 15000
            }
        }
    ],
    // Any Actions, Commands or modules can have shared global configurations, these can be specified here (Adopt a Hero doesn't contain any)
    "GlobalConfigs": [],
    // This specifies the SimTesting behaviour, useful for devs.
    // It works by simulating the actions of viewers, both redeeming Rewards and running Commands randomly.
    "SimTesting": {
        // Max simultaneous simulated users
        "UserCount": 10,
        // How long simulated users stay for in seconds (new ones are generated when old ones leave)
        "UserStayTime": 300,
        // Random interval between each random action
        "IntervalMinMS": 500,
        "IntervalMaxMS": 2500,
        // These will be performed first, in sequence when a new simulated user is created, before they do anything else.
        "Init": [
            {
                "Type": "Reward",
                "Id": "Adopt a Hero"
            }
        ],
        // These will be randomly done by a random simulated user at random intervals
        "Use": [
