    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // This is an example config file. You should copy it to %USERPROFILE%\Documents\Mount and Blade II Bannerlord\Configs 
    // and edit it there.
    // Use something with proper json validation to edit this, e.g. Visual Studio Code (https://code.visualstudio.com/download).
    // If you use notepad you will make mistakes and the mod won't work (usually too many or too few commas)!

    // Rewards ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Here you can specify the channel point rewards that will be created by the mod.
    // There is a range of documented examples using the Adopt a Hero module that comes with the mod.
    // NOTES: 
    //  * You should *NOT* create the rewards directly on twitch yourself, as they need to be created 
    //    by this mod to allow it to complete or refund redemptions.
    //  * You can only have a max of 50 channel point rewards on a single channel, so bear this in mind.
    //  * Once they have been added to your channel you can modify them there I think (e.g. color, icon), 
    //    but I can't test this myself.
    //  * These configs can be used as is, but you will want to tweak the costs at least.
    "Rewards": [
        // AdoptAHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        // These rewards assign a hero to the viewer, if they don't already have one, and if one is available.
        {
            // All Rewards have a RewardSpec, which defines the reward for twitch
            "RewardSpec": {
                "title": "Adopt a Hero",
                // Name of the reward, as it will appear on twitch
                "cost": 5000,
                // Channel point cost
                "is_enabled": true,
                // Set this to enable the reward immediately upon creation
                "background_color": "#cca6de",
                // Standard web format color code, use something like https://www.google.com/search?q=color+picker
                "max_per_stream": 10,
                // Total maximum that can happen in a single stream
                "max_per_user_per_stream": 1,
                // Max an individual viewer can redeem per stream
                "global_cooldown_seconds": 30
                // Can only be redeemed once every 30 seconds by anyone
            },
            // This is the Id of the Action that will handle this Reward
            "ActionId": "AdoptAHero",
            // This is the Action config, its specification depends on the Action itself
            "ActionConfig": {
                "IsNoble": true,
                // Adopt only nobles
                // "IsPlayerCompanion": true, // Adopt only companions *NOT TESTED YET*
                "IsWanderer": true,
                // Adopt only wanderers
                // "OnlySameFaction": true, // Adopt only within the same faction *NOT TESTED YET*
                "AllowNewAdoptionOnDeath": true, // Allows the viewer to adopt again if their previous hero dies
                // "SubscriberOnly": false, // This is intended for the bot command version, so you can limit to subs only
                // "MinSubscribedMonths": 0, // This is intended for the bot command version, so you can limit to subs only
                "StartingGold": 0,
                "StartingEquipmentTier": 0,
                "StartWithHorse": false,
                "StartWithArmor": false
            }
        },
        // AddGoldToHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        // This converts channel points to gold, that is given to the adopted hero
        // The player can spend this gold using other commands, if the config specifies it
        {
            "RewardSpec": {
                "title": "10k gold",
                "cost": 1000,
                "is_enabled": true
            },
            "ActionId": "AddGoldToHero",
            "ActionConfig": {
                "Amount": 10000
            }
        },
        {
            "RewardSpec": {
                "title": "100k gold",
                "cost": 10000,
                "is_enabled": true
            },
            "ActionId": "AddGoldToHero",
            "ActionConfig": {
                "Amount": 100000
            }
        },
        // SummonHero ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        // These rewards allow the viewer to summon their hero directly to the player in various situations
        {
            // This allows spawning into all battles, on the players side
            "RewardSpec": {
                "title": "Summon Hero to Battle",
                "cost": 2000,
                "is_enabled": true,
                "max_per_user_per_stream": 10
            },
            "ActionId": "SummonHero",
            "ActionConfig": {
                // These flags allow you to limit where the spawning is allowed
                "AllowFieldBattle": true,
                "AllowSiegeBattle": true,
                "AllowVillageBattle": true,
                "AllowArena": true,
                "AllowHideOut": true,
                "AllowFriendlyMission": false,
                "OnPlayerSide": true
                // only player side is tested so far
            }
        },
        {
            // This allows spawning into civilian walkabouts (town etc) as a bodyguard
            "RewardSpec": {
                "title": "Summon Hero as Bodyguard",
                "cost": 1000,
                "is_enabled": true,
                "max_per_user_per_stream": 20
            },
            "ActionId": "SummonHero",
            "ActionConfig": {
                "AllowFriendlyMission": true,
                "OnPlayerSide": true
                // only player side is tested so far
            }
        },
        // SkillXP ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        // These rewards add XP to the specified skills
        {
            "RewardSpec": {
                "title": "5000xp to Melee",
                "cost": 2000,
                "is_enabled": true,
                "max_per_user_per_stream": 10
            },
            "ActionId": "SkillXP",
            "ActionConfig": {
                // Skills:
                // One Handed, Two Handed, Polearm, Bow, Crossbow, Throwing, Riding, Athletics, Smithing
                // Scouting, Tactics, Roguery, Charm, Leadership, Trade, Steward, Medicine, Engineering
                // If you specify a few then it will improve the highest, unless you specify "Random": true, below
                "Improvement": "One Handed, Two Handed, Polearm",
                // "Random": true // specify this to choose randomly among the skills rather than choosing the best
                // XP added will be random between low and high amounts, to make it non-random, just set them both the same
                "AmountLow": 5000,
                "AmountHigh": 5000
            }
        },
        {
            "RewardSpec": {
                "title": "5000xp to Ranged",
                "cost": 2000,
                "is_enabled": true,
