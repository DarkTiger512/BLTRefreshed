<UserControl x:Class="BannerlordTwitch.UI.RangeIntControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BannerlordTwitch.UI"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:util="clr-namespace:BannerlordTwitch.Util"
             mc:Ignorable="d"
             d:DesignHeight="24" d:DesignWidth="200" d:DataContext="{d:DesignInstance util:RangeInt}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <xctk:IntegerUpDown Value="{Binding Min}" Margin="0 0 2 0"/>
        <xctk:IntegerUpDown Grid.Column="1" Value="{Binding Max}" Margin="2 0 0 0"/>
    </Grid>
</UserControl>
